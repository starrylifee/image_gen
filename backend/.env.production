# 프로덕션 환경 변수 설정
NODE_ENV=production
PORT=8080

# MongoDB 설정
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# JWT 설정
JWT_SECRET=prod_jwt_secret_key_for_deployment

# OpenAI API 키
OPENAI_API_KEY=your_openai_api_key_here

# 클라이언트 URL - 클라우드타입에서는 같은 도메인 사용
CLIENT_URL=/

# 기본 교사 크레딧
DEFAULT_TEACHER_CREDITS=5 